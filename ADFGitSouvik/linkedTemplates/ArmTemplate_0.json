{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADFGitSouvik"
		},
		"Git_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Git'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Wait1",
						"type": "Wait",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"waitTimeInSeconds": 1
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {},
					"cancelAfter": {}
				},
				"annotations": []
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Git')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('Git_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/StockEquity')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Git",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "Stock_Equity_06052022.csv",
						"folderPath": "StockMarketData/SourceData",
						"container": "adfdemo"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "SYMBOL",
						"type": "String"
					},
					{
						"name": " SERIES",
						"type": "String"
					},
					{
						"name": " DATE1",
						"type": "String"
					},
					{
						"name": " PREV_CLOSE",
						"type": "String"
					},
					{
						"name": " OPEN_PRICE",
						"type": "String"
					},
					{
						"name": " HIGH_PRICE",
						"type": "String"
					},
					{
						"name": " LOW_PRICE",
						"type": "String"
					},
					{
						"name": " LAST_PRICE",
						"type": "String"
					},
					{
						"name": " CLOSE_PRICE",
						"type": "String"
					},
					{
						"name": " AVG_PRICE",
						"type": "String"
					},
					{
						"name": " TTL_TRD_QNTY",
						"type": "String"
					},
					{
						"name": " TURNOVER_LACS",
						"type": "String"
					},
					{
						"name": " NO_OF_TRADES",
						"type": "String"
					},
					{
						"name": " DELIV_QTY",
						"type": "String"
					},
					{
						"name": " DELIV_PER",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/Git')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/StockOption')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Git",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "Stock_Option_05052022.csv",
						"folderPath": "StockMarketData/SourceData",
						"container": "adfdemo"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "INSTRUMENT",
						"type": "String"
					},
					{
						"name": "SYMBOL    ",
						"type": "String"
					},
					{
						"name": "EXP_DATE  ",
						"type": "String"
					},
					{
						"name": "STR_PRICE  ",
						"type": "String"
					},
					{
						"name": "OPT_TYPE",
						"type": "String"
					},
					{
						"name": "OPEN_PRICE ",
						"type": "String"
					},
					{
						"name": "HI_PRICE   ",
						"type": "String"
					},
					{
						"name": "LO_PRICE   ",
						"type": "String"
					},
					{
						"name": "CLOSE_PRICE",
						"type": "String"
					},
					{
						"name": "OPEN_INT*      ",
						"type": "String"
					},
					{
						"name": "TRD_QTY          ",
						"type": "String"
					},
					{
						"name": "NO_OF_CONT       ",
						"type": "String"
					},
					{
						"name": "NO_OF_TRADE      ",
						"type": "String"
					},
					{
						"name": "NOTION_VAL        ",
						"type": "String"
					},
					{
						"name": "PR_VAL            ",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/Git')]"
			]
		}
	]
}